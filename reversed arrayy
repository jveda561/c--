 #include <stdio.h>
#include <stdlib.h>
int main() {
    int arr[45],n=3;
    int temp,*start,*end;
    //i/p elements
    printf("enter the elements\n",n);
    for( int i=0;i<3;i++){
        scanf("%d",&arr[i]);
    } // pionter intalization
    start = arr;
    end = arr+n-1;
    // Reverse using pointers
    while (start<end){
        temp=*start;
        *start=*end;
        *end=temp;
        *start++;
        *end--;
    }
    printf("rversed array\n");
    for(int i=n-1;i>=0;i--){
        printf("%d",arr[i]);
    }
}
